{
    "name":"asconsulting/member_email_username",
    "description":"Allows for automatic usage of email as username for the Contao Open Source CMS",
    "homepage": "https://andrewstevens.consulting",
    "keywords":["contao", "member", "user", "username", "email"],
    "type":"contao-module",
    "license":"LGPL-3.0-or-later",
    "authors":[
        {
            "name":"Andrew Stevens",
            "homepage":"https://andrewstevens.consulting"
        }
    ],
    "require":{
        "php": ">=7.3",
        "contao/core-bundle": ">=4.9",
        "contao-community-alliance/composer-plugin": "~2.4 || ~3.0"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Asc\\": [
                "system/modules/member_email_username/library/Asc"
            ]
        }
    },
    "extra": {
        "contao": {
            "sources": {
                "system/modules/member_email_username": "system/modules/member_email_username"
            }
        }
    },
    "minimum-stability": "dev"
}