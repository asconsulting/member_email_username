{
    "name":"asconsulting/member_email_username",
    "description":"Allows for automatic usage of email as username for the Contao Open Source CMS",
    "homepage": "https://andrewstevens.consulting",
    "keywords":["contao", "member", "user", "username", "email"],
    "type":"contao-module",
    "license":"LGPL-3.0-or-later",
    "authors":[
        {
            "name":"Andrew Stevens",
            "homepage":"https://andrewstevens.consulting"
        }
    ],
    "require":{
        "php": ">=8.2",
        "contao/core-bundle": "^5.3"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.0"
    },
	"autoload": {
        "psr-4": {
            "EmailUsername\\": "src/"
        }
    },
	"extra": {
		"contao-manager-plugin": "EmailUsername\\ContaoManager\\Plugin"
	},
    "minimum-stability": "dev"
}